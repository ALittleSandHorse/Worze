<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/back_two">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/train_et"
        android:typeface="sans"
        android:overScrollMode="always"
        android:inputType="textNoSuggestions"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:background="#9bffffff"
        android:gravity="top"
        android:textSize="80sp"
        android:layout_above="@+id/ready_train"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="@string/ready"
        android:id="@+id/ready_train"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="#64ffffff"
        android:textSize="50sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnReady"
        android:clickable="true"
        android:background="@drawable/sel_btn_ready"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>