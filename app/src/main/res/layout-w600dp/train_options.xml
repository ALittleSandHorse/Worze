<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_to">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="69dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/groupsquant"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="45sp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/groupAmount"
            android:layout_toStartOf="@+id/groupAmount" />

        <EditText
            android:id="@+id/groupAmount"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:background="#64ffffff"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="60sp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="55dp"
            android:layout_marginEnd="55dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/timing"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <EditText
        android:id="@+id/symbolDelay"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/groupAmount"
        android:layout_alignStart="@+id/groupAmount"
        android:background="#64ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textSize="60sp" />

    <Button
        android:id="@+id/readyToPlay"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/sel_btn_translate"
        android:text="@string/ready"
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupAmount"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="@string/groups_edges"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:text="@string/delay_edges"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lang"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/language"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55sp"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/chooselang"
        android:layout_toStartOf="@+id/chooselang" />

    <TextView
        android:id="@+id/chooselang"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/symbolDelay"
        android:layout_alignStart="@+id/symbolDelay"
        android:layout_alignTop="@+id/lang"
        android:layout_gravity="center_vertical"
        android:background="#64ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/ruslang"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/symbnumb"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/symbnumb"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45sp"
        android:layout_below="@+id/lang"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginTop="48dp" />

    <CheckBox
        android:id="@+id/symbCheck"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/chooselang"
        android:layout_alignRight="@+id/chooselang"
        android:layout_alignTop="@+id/symbnumb"
        android:button="@drawable/sel_check"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="60sp" />


</RelativeLayout>