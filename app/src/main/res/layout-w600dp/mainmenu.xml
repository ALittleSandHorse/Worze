<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_mainmenu">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="500dp"
        android:layout_height="240dp"
        android:background="#9b04600e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="@string/hallo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#010200"
            android:textSize="90sp"
            android:theme="@style/Base.AlertDialog.AppCompat.Light"
            android:typeface="sans" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/player_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#010100"
            android:textSize="80sp"
            android:typeface="sans" />
    </RelativeLayout>

   <!-- -->
    <Button
        android:id="@+id/alphabet_btn"
        android:layout_width="440dp"
        android:layout_height="100dp"
        android:layout_above="@+id/code_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sel_btn_alphabet"
        android:text="@string/alphabet"
        android:textSize="60sp" />

    <Button
        android:id="@+id/code_btn"
        android:layout_width="440dp"
        android:layout_height="100dp"
        android:layout_above="@+id/train_btn"
        android:layout_alignLeft="@+id/alphabet_btn"
        android:layout_alignStart="@+id/alphabet_btn"
        android:background="@drawable/sel_btn_code"
        android:text="@string/makecode"
        android:textSize="60sp" />

    <Button
        android:id="@+id/train_btn"
        android:layout_width="440dp"
        android:layout_height="100dp"
        android:background="@drawable/sel_btn_train"
        android:text="@string/totrain"
        android:textSize="60sp"
        android:layout_above="@+id/tips_btn"
        android:layout_alignLeft="@+id/tips_btn"
        android:layout_alignStart="@+id/tips_btn" />

    <Button
        android:id="@+id/tips_btn"
        android:layout_width="440dp"
        android:layout_height="100dp"
        android:background="@drawable/sel_btn_key"
        android:text="@string/tips"
        android:textSize="70sp"
        android:layout_above="@+id/exit_btn"
        android:layout_alignLeft="@+id/exit_btn"
        android:layout_alignStart="@+id/exit_btn" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="440dp"
        android:layout_height="100dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/sel_btn_exit"
        android:text="@string/toexit"
        android:textSize="70sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>