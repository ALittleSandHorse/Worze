<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/entringback">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/splashprogbar"
        android:layout_width="270sp"
        android:layout_height="30sp"
        android:id="@+id/pbView"
        android:max="100"
        android:indeterminate="false"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="110sp"
        android:layout_height="30sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/percent"
        android:id="@+id/percent"
        android:gravity="center_vertical"
        android:textColor="#cddb9d"
        android:textSize="23sp"
        android:layout_alignTop="@+id/pbView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />
    <TextView
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/loading"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:textColor="#cddb9d"
        android:textSize="23sp"
        android:textIsSelectable="true"
        android:layout_alignTop="@+id/pbView"
        android:layout_toLeftOf="@+id/percent"
        android:layout_toStartOf="@+id/percent" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="450dp"
        android:id="@+id/splsh"
        android:src="@mipmap/mrworze"
        android:layout_above="@+id/pbView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>