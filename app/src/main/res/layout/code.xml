<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_lion">

    <EditText
        android:id="@+id/textabove"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#9bffffff"
        android:gravity="top"
        android:textSize="35sp"
        android:typeface="sans" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/textbelow"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/shest_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/sounds_btn"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/sel_btn_shesterenka"
            android:clickable="true"
            android:contentDescription="@+id/shest_btn" />

        <Button
            android:id="@+id/speech_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/shest_btn"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/speech_btn"
            android:clickable="true"
            android:contentDescription="@+id/speech_btn" />

        <Button
            android:id="@+id/sounds_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/shest_btn"
            android:layout_toRightOf="@+id/shest_btn"
            android:background="@mipmap/sounds_btn"
            android:textColor="#c7ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/translate_btn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/speech_btn"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/sel_btn_translate"
            android:text="@string/translate"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textbelow"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#9bffffff"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        android:textSize="35sp"
        android:typeface="sans" />
</RelativeLayout>