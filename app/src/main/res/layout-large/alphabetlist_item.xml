<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:src="@mipmap/a"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/texttxt"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:textColor="#4dbe7e"
        android:text="@string/listsing"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textttl"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img" />

    <TextView
        android:id="@+id/textttl"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="@string/listcode"
        android:textColor="#4dbe7e"
        android:textSize="27sp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/texttxt"
        android:layout_alignStart="@+id/texttxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player_name"
        android:id="@+id/text_code"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textttl"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#22a35a"
        android:textSize="42sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hallo"
        android:id="@+id/text_sing"
        android:layout_below="@+id/text_code"
        android:layout_alignRight="@+id/text_code"
        android:layout_alignEnd="@+id/text_code"
        android:textColor="#22a35a"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="21sp"
        android:layout_toRightOf="@+id/texttxt"
        android:layout_toEndOf="@+id/texttxt" />

</RelativeLayout>
</LinearLayout>