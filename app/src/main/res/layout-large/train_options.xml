<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/back_to"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/groupsquant"
            android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical"
            android:textSize="50sp"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:inputType="number"
            android:ems="10"
            android:maxLength="3"
            android:id="@+id/groupAmount"
            android:background="#64ffffff"
            android:textSize="60sp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="74dp"
            android:layout_marginEnd="74dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timing"
        android:id="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="50sp"
        android:layout_alignTop="@+id/symbolDelay"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLength="3"
        android:id="@+id/symbolDelay"
        android:background="#64ffffff"
        android:textSize="70sp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/groupAmount"
        android:layout_alignStart="@+id/groupAmount"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/readyToPlay"
        android:text="@string/ready"
        android:background="@drawable/sel_btn_translate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textSize="45sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/groups_edges"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_below="@+id/groupAmount"
        android:layout_alignRight="@+id/groupAmount"
        android:layout_alignEnd="@+id/groupAmount"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/delay_edges"
        android:id="@+id/textView6"
        android:layout_below="@+id/symbolDelay"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textSize="20sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/language"
        android:id="@+id/lang"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="50sp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ruslang"
        android:id="@+id/chooselang"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="50sp"
        android:background="#64ffffff"
        android:layout_alignBottom="@+id/lang"
        android:layout_alignLeft="@+id/symbolDelay"
        android:layout_alignStart="@+id/symbolDelay" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/symbnumb"
        android:id="@+id/symbnumb"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="45sp"
        android:layout_below="@+id/lang"
        android:layout_alignLeft="@+id/lang"
        android:layout_alignStart="@+id/lang"
        android:layout_marginTop="27dp" />

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:id="@+id/symbCheck"
        android:textSize="60sp"
        android:button="@drawable/sel_check"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_alignTop="@+id/symbnumb"
        android:layout_alignRight="@+id/chooselang"
        android:layout_alignEnd="@+id/chooselang" />


</RelativeLayout>