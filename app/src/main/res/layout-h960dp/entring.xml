<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/entringback">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/splashprogbar"
        android:layout_width="400sp"
        android:layout_height="30sp"
        android:id="@+id/pbView"
        android:max="100"
        android:indeterminate="false"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="110sp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/percent"
        android:id="@+id/percent"
        android:gravity="center_vertical"
        android:textColor="#cddb9d"
        android:layout_below="@+id/splsh"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:textSize="25sp" />
    <TextView
        android:layout_width="120sp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/loading"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:textColor="#cddb9d"
        android:layout_below="@+id/splsh"
        android:layout_alignLeft="@+id/pbView"
        android:layout_alignStart="@+id/pbView"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:textSize="25sp"
        android:textIsSelectable="false" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/splsh"
        android:src="@mipmap/mrworze"
        android:layout_above="@+id/pbView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>