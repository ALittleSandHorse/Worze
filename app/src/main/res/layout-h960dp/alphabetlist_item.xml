<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/a" />

        <TextView
            android:id="@+id/texttxt"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textttl"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:gravity="center_vertical"
            android:text="@string/listsing"
            android:textColor="#4dbe7e"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textttl"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/texttxt"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/texttxt"
            android:gravity="center_vertical"
            android:text="@string/listcode"
            android:textColor="#4dbe7e"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textttl"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/player_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#22a35a"
            android:textSize="37sp" />

        <TextView
            android:id="@+id/text_sing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/text_code"
            android:layout_alignRight="@+id/text_code"
            android:layout_below="@+id/text_code"
            android:layout_toEndOf="@+id/texttxt"
            android:layout_toRightOf="@+id/texttxt"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/hallo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#22a35a"
            android:textSize="19sp" />

    </RelativeLayout>
</LinearLayout>