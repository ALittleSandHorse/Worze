<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_mainmenu">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rll"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9b04600e"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hallo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#010200"
            android:textSize="70sp"
            android:theme="@style/Base.AlertDialog.AppCompat.Light"
            android:typeface="sans"
            android:textIsSelectable="false"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="center|center_horizontal|top"
            android:text="@string/player_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#010100"
            android:textSize="70sp"
            android:typeface="sans"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/alphabet_btn"
        android:background="@drawable/sel_btn_alphabet"
        android:text="@string/alphabet"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/code_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <Button
        android:id="@+id/code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_above="@+id/train_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sel_btn_code"
        android:text="@string/makecode"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <Button
        android:id="@+id/train_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/sel_btn_train"
        android:text="@string/totrain"
        android:textSize="50sp"
        android:layout_above="@+id/tips_btn"
        android:layout_alignLeft="@+id/alphabet_btn"
        android:layout_alignStart="@+id/alphabet_btn"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <Button
        android:id="@+id/tips_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/sel_btn_key"
        android:text="@string/tips"
        android:textSize="50sp"
        android:layout_above="@+id/exit_btn"
        android:layout_alignRight="@+id/train_btn"
        android:layout_alignEnd="@+id/train_btn"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sel_btn_exit"
        android:text="@string/toexit"
        android:textSize="50sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:paddingBottom="15dp" />
</LinearLayout>
</RelativeLayout>